# Contributor:
# Maintainer:
pkgname=mmdvm_firmware_bin
pkgver=
pkgrel=0
pkgdesc=""
url=""
arch="all"
license=""
depends=""
makedepends=""
install=""
subpackages="$pkgname-dev $pkgname-doc"
source=""
builddir="$srcdir/"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
	# apk add stm32flash
	# get binary for hotspot image like from `make hs`
	# equivalent of `make mmdvm_hs_hat`
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

